
public class Ex2 {

	public static void main(String[] args) {
		int cnt = 0;
		
		int[][] arr = {
						{5, 5, 5, 5, 5},//25
						{10, 10, 10, 10, 10},//50
						{20, 20, 20, 20, 20},//100
						{30, 30, 30, 30, 30},//150
					};
		int total = 0;
		float average = 0;
		
		for(int i=0;i<arr.length;i++) {
			for(int j=0;j<arr[i].length;j++) {
				total+=arr[i][j];
				cnt++;
				average = total/(float)cnt;
			}
		}
		System.out.println(total);
		System.out.println(average);
	}

}
