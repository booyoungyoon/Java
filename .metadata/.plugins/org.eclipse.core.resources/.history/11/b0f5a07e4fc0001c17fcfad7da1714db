import java.util.Scanner;

public class Ex02 {
	public static void main(String[] args) {
		
		int cnt=0;
		int sum=0;
		int aver=0;
		for(int i=1;i<=100;i++) {
			sum+=i;
			cnt++;
		}
		System.out.println(cnt);
		System.out.println("총합 : " + sum);
		System.out.println("평균 : " + sum/cnt);
		
		int sum1=0;
		int cnt1=0;
		for(int i=1;i<=100;i++) {
			if(i%2==0&&i%7==0)
			sum1+=i;
			cnt1++;
		}
		System.out.println("2의 배수이면서 7의 배수의 갯수 : " + sum1);
	}
}